@model Product

<div class="container mt-4">
    <h1 class="mb-4">Add a New Product</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form method="Post" asp-controller="Product" asp-action="Create" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label  class="form-label">Category ID</label>
                    <input  class="form-control" />
                    <span  class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label">Description</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Price" class="form-label">Price</label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                <!-- Image Upload -->
                <div class="mb-3">
                    <label for="imageFile" class="form-label">Upload Image</label>
                    <input type="file" id="imageFile" name="file" class="form-control" accept="image/*" />
                </div>

                <div class="mb-3">
                    <input type="submit" value="Create" class="btn btn-success" />
                    <a class="btn btn-secondary" asp-action="Index">Show All</a>
                </div>
            </form>
        </div>
    </div>
</div>