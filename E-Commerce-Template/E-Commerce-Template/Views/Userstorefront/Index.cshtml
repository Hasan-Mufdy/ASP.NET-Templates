@model List<E_Commerce_Template.Models.Product>


@if (Model != null)
{
    <div class="container mt-4">
        <ul class="list-group">
            <h1>The Categories list:</h1>
            @foreach (var category in Model)
            {
                <li class="list-group-item">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3>@category.Name</h3>
                        </div>
                        <div>
                            <a class="btn btn-success" asp-controller="Userstorefront" asp-action="GetByCategoryId" asp-route-categoryId="@category.Id"><i class="bi bi-list"></i> View Products </a>
                        </div>
                    </div>
                </li>
            }
        </ul>
    </div>
    <div class="container mt-4">
        <a class="btn btn-success" asp-controller="Userstorefront" asp-action="AllProducts">
            <i class="bi bi-list"></i> View All Products
        </a>
    </div>
}
else
{
    <p>No categories available.</p>
}
